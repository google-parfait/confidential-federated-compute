build --incompatible_enable_cc_toolchain_resolution
build --repo_env=BAZEL_CXXOPTS="-std=c++17"
build --experimental_repo_remote_exec
# Increase the test timeout for Bazel as the default of 60 seconds is too low
# for the requirements_test generated by the compile_pip_requirements rule,
# leading to flakiness.
test  --test_timeout=120
