# Use a bazel cache accessible to the container.
startup --output_user_root=./.bazel-cache
build --incompatible_enable_cc_toolchain_resolution
build --cxxopt=-std=c++17 --host_cxxopt=-std=c++17
build --action_env=BAZEL_DO_NOT_DETECT_CPP_TOOLCHAIN=1 --incompatible_strict_action_env
common --experimental_repo_remote_exec
# Increase the test timeout for Bazel as the default of 60 seconds is too low
# for the requirements_test generated by the compile_pip_requirements rule,
# leading to flakiness.
test --test_timeout=120
